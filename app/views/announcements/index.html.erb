<div class="container pt-4 pb-2">
  <div class="d-flex justify-content-between">
    <h1>Créations et liquidations</h1>
    <%= form_tag announcements_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: "Entrez un mot-clé" %>
      <%= submit_tag 'Chercher', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="px-4 scrollable-x w-100">
  <% if @announcements&.any? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <% @headers.each do |header| %>
            <th scope="col"><%= header %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each_with_index do |announcement, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= announcement.categorie %></td>
            <td><%= announcement.bodacc %></td>
            <td><%= announcement.annonce_n %></td>
            <td><%= announcement.siren %></td>
            <td><%= announcement.rcs %></td>
            <td><%= announcement.nom %></td>
            <td><%= announcement.prenom %></td>
            <td><%= announcement.denomination %></td>
            <td><%= announcement.forme %></td>
            <td><%= announcement.capital %></td>
            <td><%= announcement.administration %></td>
            <td><%= announcement.adresse %></td>
            <% if announcement.etablissement_s %>
              <td><%= announcement.etablissement_s[:qualite_de_l_etablissement] %></td>
              <td><%= announcement.etablissement_s[:origine_du_fond] %></td>
              <td><%= announcement.etablissement_s[:activite] %></td>
              <td><%= announcement.etablissement_s[:adresse_de_l_etablissement] %></td>
              <td><%= announcement.etablissement_s[:adresse_du_siege_social] %></td>
            <% else %>
              <td></td>
              <td></td>
              <td><%= announcement.activite %></td>
              <td></td>
              <td><%= announcement.adresse_du_siege_social %></td>
            <% end %>
            <td><%= announcement.a_dater_du %></td>
            <td><%= announcement.date_de_commencement_d_activite %></td>
            <td><%= announcement.infogreffe %></td>
            <td><%= announcement.naf %></td>
            <% if announcement.precedent_s_proprietaire_s %>
              <td><%= announcement.previous_siren %></td>
              <td><%= announcement.precedent_s_proprietaire_s[:nom] %> <%= announcement.precedent_s_proprietaire_s[:prenom] %></td>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
            <td><%= announcement.complement_jugement %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
